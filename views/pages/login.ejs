<!doctype html>
<html>
    <head>
        <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <%- include('../partials/head') %> 
    <link rel="stylesheet" type="text/css" href="/css/input_style.css">
    <style>
        span.description{
            font-size: 14px;
        }
    </style>
    </head>
  <body>
    <%- include('../partials/header', {user: null}); %>
    <div class="ex_title">
        <h1 id="main_title">Login</h1>
    </div>
    <div id="content">
        <div class="input_atom container" style="max-width: 400px;">
            <form action="/login" method="POST" >
                <div class="form-group form_item">
                    <label for="username">Email: </label>
                    <input id="username" class="form-control" name="username" type="text" placeholder="email@exemplo.com"/>
                </div>
                <div class="form-group form_item">
                    <label for="password">Senha: </label>
                    <input id="password" class="form-control" name="password" type="password" placeholder="senha"/>
                </div>
                    
                <input type="submit" value="Login" class="btn btn-outline-success form_item" />
                    
                <% if(message) { %>
                    <div class="form-group">
                        <span class="description">
                            <label style="color:Red"><%= message %></label>
                        </span>
                    </div>
                <%}%>
                <div class="form-group">
                <span class="description">
                    <a href="/cadastro/forget">Esqueceu sua senha?</a> | <a href="/cadastro">NÃ£o possui cadastro?</a>
                </span>
            </div>
                    
            </form>
        </div>
    </div>
  </body>
</html>