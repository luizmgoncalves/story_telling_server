<!doctype html>
<html>
    <head>
        <%- include('../partials/head'); %>
    </head>
  <body>
    <%- include('../partials/header', {user: null}); %>
    <div class="ex_title">
        <div class="title">
            <h1 id="history_title">Login</h1>
        </div>
        <style>
            p.description{
                font-size: 16px;
                text-indent: 0px;
            }
        </style>
    </div>
    <div id="content">
        <div class="input_atom">
            <form action="/login" method="POST">
                <table>
                    <tr>
                    <td>
                        <label for="username">Email: </label>
                    </td>
                    <td>
                        <input id="username" name="username" type="text" />
                    </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="password">Senha: </label>
                        </td>
                        <td>
                            <input id="password" name="password" type="password" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" value="Login" />
                        </td>
                    </tr>
                    <% if(message) { %>
                    <tr>
                        <td colspan="2">
                            <p class="description">
                                <label style="color:Red"><%= message %></label>
                            </p>
                        </td>
                    </tr>
                    <%}%>
                    <tr>
                        <td colspan="2">
                            <p class="description">
                                <a href="/users/forgot">Esqueceu sua senha?</a> | <a href="/cadastro">NÃ£o possui cadastro?</a>
                            </p>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
  </body>
</html>