<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historia</title>
    <link rel="stylesheet" type="text/css" href="/css/layout.css">
    <link rel="stylesheet" type="text/css" href="/css/input_style.css">
</head>
<body>
    <%- include('../partials/header', {user: user}); %>
    <div class="ex_title">
        <div class="title">
            <h1 id="history_title">Criador de histórias</h1>
            <h5>Deixe sua criatividade voar!</h5>
        </div>
    </div>
    <div id="content">
        <div class="input_atom">
            <h4>Título</h4>
            <input class="input_text" type="text" id="title">
        </div>
        <div id="choices">
        </div>
        <div id="add_choice_div">
            <button id="add_choice">Adicionar Escolha</button>
            <button id="del_choice">Exluir última escolha</button>
            <button id="submit">Submeter História</button>
        </div>
        
    </div>
    <script src="/js/create_story.js"></script>
    <script>
        function handle_json(json_result){
            console.log(json_result)
            navigator.clipboard.writeText(JSON.stringify(json_result))

            fetch("/submit_story", {
                    method: "POST",
                    headers: {
                    "Content-Type": "application/json",
                    },
                    body: JSON.stringify(json_result),
                })
                .then((response) => response.json())
                .then((data) => {
                    if(data.sucess){
                        window.alert("A história foi submetida com sucesso!");
                    }
                })
                .catch((error) => {
                    window.alert("Houve algum erro durante o carregamento da história");
                });

        }

        add_choice()
    </script>
</body>
</html>